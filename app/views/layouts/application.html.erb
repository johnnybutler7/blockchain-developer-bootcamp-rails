<!DOCTYPE html>
<html>
  <head>
    <title>BlockchainDeveloperBootcampRails</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

	 <%= stylesheet_link_tag 'application', media: 'all' %>
	 <%= stylesheet_pack_tag 'application', media: 'all' %>
	 <%= javascript_pack_tag 'application' %>
	 <script src="https://cdnjs.cloudflare.com/ajax/libs/web3/1.5.2/web3.min.js"></script>
	 
	 <%= javascript_tag do %>
	   window._exchange_contract_address = "<%= ENV['EXCHANGE_CONTRACT_ADDRESS'] %>"
		 window._block_chain_url = "<%= ENV['BLOCKHAIN_URL'] %>"
	 <% end %>
  </head>

  <body>
	  <div id='root'>
		  <div>
		    <%= render partial: 'shared/notices' %>
				<%= render partial: 'shared/header' %>
				<%= render partial: 'shared/toasts' %>
				
				<div class='content'>
				  <%= yield %>
				</div>
					
			</div>
		</div>
		
  </body>
</html>
