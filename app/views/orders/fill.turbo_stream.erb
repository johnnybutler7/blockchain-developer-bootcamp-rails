<%= turbo_stream.replace('ether-balances',
                          partial: "dapp/balances/ether_balances",
                          locals: { 
                           dapp_status: @dapp_status
													}) %>
													
<%= turbo_stream.replace('withdraw-ether-balances',
                          partial: "dapp/balances/withdraw_ether_balances",
                          locals: { 
                           dapp_status: @dapp_status
													}) %>

<%= turbo_stream.remove("fill-order-#{@order_id}") %>

<%= turbo_stream.append('my-trades-list',
                          partial: "accounts/my_trade",
                          locals: { 
                            trade: @trade
													}) %>
													
<%= turbo_stream.prepend('all-trades-list',
                          partial: "accounts/trade",
                          locals: { 
                            trade: @trade
													}) %>
													
<%= turbo_stream.append "toasts", 
												partial: "shared/toast", 
												locals: { message: "Order successfully filled ", 
													notice_at: @trade.formatted_timestamp } %>

