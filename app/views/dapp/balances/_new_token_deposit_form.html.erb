<%= form_tag token_deposits_path, class: 'row', id: 'token-deposit-form', data:{ controller: 'token-deposit', action: 'submit->token-deposit#submit'}  do |f| %>
	<div class="col-12 col-sm pr-sm-2">
		<%= text_field_tag :token_amount, nil, class: "form-control form-control-sm bg-dark text-white", placeholder: 'DAPP Amount', required: '', data: { token_deposit_target: 'tokenAmount'} %>
