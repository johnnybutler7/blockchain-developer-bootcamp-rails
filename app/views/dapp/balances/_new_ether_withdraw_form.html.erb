<%= turbo_frame_tag "new-ether-withdraw-form" do %>
	<%= form_tag withdrawals_path, class: 'row', id: 'ether-withdraw-form' do |f| %>
		<div class="col-12 col-sm pr-sm-2">
			<%= text_field_tag  :ether_amount, nil, class: "form-control form-control-sm bg-dark text-white", placeholder: "ETH Amount"%>
		</div>
		<div class="col-12 col-sm-auto pl-sm-0">
			<%= submit_tag 'Withdraw', class:  "btn btn-primary btn-block btn-sm"%>
		</div>
	<% end %>
<% end %>