<div class="vertical-split">
  <div class="card bg-dark text-white">
		<div class="card-header">Balance</div>
		<div class="card-body">
		  <nav class="bg-dark text-white nav nav-tabs" role="tablist">
				<a href="#" role="tab"  data-bs-toggle="tab" data-bs-target="#deposit-form" aria-selected="true" class="nav-item nav-link active">Deposit</a>
				<a href="#" role="tab"  data-bs-toggle="tab" data-bs-target="#withdraw-form" aria-selected="false" class="nav-item nav-link">Withdraw</a>
			</nav>
			<div class="tab-content">
				<div id='deposit-form' role="tabpanel" aria-hidden="false" class="fade bg-dark tab-pane active show">
				  <table class="table table-dark table-sm small">
					  <thead>
						  <tr><th>Token</th><th>Wallet</th><th>Exchange</th></tr>
						</thead>
						<tbody>
							<tr>
								<td>ETH</td>
								<td id='wallet-ether-balance'><%= @ether_balance %></td>
								<td id='exchange-ether-balance'><%= @exchange_ether_balance %></td>
							</tr>
						</tbody>
					</table>
					<%= render partial: 'new_ether_deposit' %>
					<table class="table table-dark table-sm small">
						<tbody>
							<tr>
								<td>DAPP</td>
								<td id='wallet-token-balance'><%= format_token_balance(@token_balance) %></td>
								<td id='exchange-token-balance'><%= format_token_balance(@exchange_token_balance) %></td>
							</tr>
						</tbody>
					</table>
					<%= render partial: 'new_token_deposit' %>
				</div>
		
				<div id='withdraw-form' role="tabpanel" aria-hidden="true" class="fade bg-dark tab-pane">
					<table class="table table-dark table-sm small">
						<thead>
							<tr><th>Token</th>
								<th>Wallet</th>
								<th>Exchange</th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td>ETH</td>
								<td><%= @ether_balance %></td>
								<td><%= @exchange_ether_balance %></td>
							</tr>
						</tbody>
					</table>
				  <%= render partial: 'new_ether_withdrawal' %>
					<table class="table table-dark table-sm small">
						<tbody>
							<tr>
								<td>DAPP</td>
								<td><%= format_token_balance(@token_balance) %></td>
								<td><%= format_token_balance(@exchange_token_balance) %></td></tr>
						</tbody>
					</table>
					<%= render partial: 'new_token_withdrawal' %>
				</div>
			</div>
		</div>
	</div>
	
	<div class="card bg-dark text-white">
		<div class="card-header">New Order</div>
		<div class="card-body">
			<nav class="bg-dark text-white nav nav-tabs" role="tablist">
				<a href="#" role="tab" data-bs-toggle="tab" aria-selected="true" data-bs-target="#buy-order-form" class="nav-item nav-link active">Buy</a>
				<a id='sell-order-tab' href="#" role="tab" data-bs-toggle="tab" aria-selected="false" data-bs-target="#sell-order-form" class="nav-item nav-link">Sell</a>
	
			</nav>
			<div class="tab-content">
				<div role="tabpanel" id='buy-order-form' aria-hidden="false" class="fade bg-dark tab-pane active show">
					<%= render partial: 'new_buy_order' %>
				</div>
				<div id='sell-order-form' role="tabpanel" aria-hidden="true" class="fade bg-dark tab-pane">
					<%= render partial: 'new_sell_order' %>
				</div>
			</div>
		</div>
	</div>
</div>
