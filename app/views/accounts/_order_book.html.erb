<div class="vertical">
	<div class="card bg-dark text-white">
		<div class="card-header">Order Book</div>
		<div class="card-body order-book">
			<table class="table table-dark table-sm small">
				<tbody>
					<% @sell_orders.each do |order| %>
					  <tr id="sell-order-<%= order[:orderId] %>" class="order-book-order">
						  <td><%= order[:tokenAmount]%></td>
							<td><%= order[:tokenPrice] %></td>
							<td><%= order[:etherAmount] %></td>
							<td><%= link_to 'Buy', order_fill_path(order_id: order[:orderId]), method: :put, data: {order_id: order[:orderId]} %></td>
					  </tr>
					<% end %>
					<tr>
						<th>DAPP</th>
						<th>DAPP/ETH</th>
						<th>ETH</th>
						<th></th>
					</tr>
					<% @buy_orders.each do |order| %>
					  <tr id="buy-order-<%= order[:orderId] %>" class="order-book-order">
						  <td><%= order[:tokenAmount]%></td>
							<td><%= order[:tokenPrice] %></td>
							<td><%= order[:etherAmount] %></td>
							<td><%= link_to 'Sell', order_fill_path(order_id: order[:orderId]), method: :put, data: {order_id: order[:orderId]} %></td>
					  </tr>
				  <% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
